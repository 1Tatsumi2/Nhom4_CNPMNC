@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Details";
    decimal total = 0;
    decimal subtotal = 0;
}
<h3>Order Details</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order Code</th>
            <th scope="col">UserName</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Quantity</th>
            <th scope="col">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            subtotal = item.Quantity * item.Price;
            total += subtotal;
            <tr>
                <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                <th>@item.Id</th>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.Product.Name</td>
                <td>@item.Price</td>
                <td><img src="~/media/products/@item.Product.Image" width="120" /></td>
                <td>@item.Quantity</td>
                <td>@subtotal.ToString("C")</td>

            <tr>
                <th colspan="5"></th>
                <th style="text-align:center;font-size: 25px;">Total: </th>
                <td style="color:#FE980F;font-size: 25px;">@total.ToString("C")</td>
                <td>
                    <select style="width:fit-content" class="form-control select-update-order">
                            {
                            <option value="1" selected>New Order</option>
                            <option value="0">Done</option>
                            }
                    </select>
                </td>
                <a asp-action="Index">Back to List Order</a>
            </tr>
            </tr>
        }
        
        
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val();
                var ordercode = $(this).closest('tbody').find('.getId').val(); // Lấy giá trị từ input ẩn trong cùng hàng

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: { status: status, ordercode: ordercode },

                    success: function (result) {
                        if (result.success) {
                            Swal.fire({
                                icon: "success",
                                title: "Yayyy",
                                text: "Update successfully",
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: "Update failed: " + result.message,
                            });
                        }
                    },
                });
            });
        });
    </script>
}